{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "emcc",
            "args": [
                // "src/${workspaceFolderBasename}.c",
                "src/program.c",
                "-std=c11",
                "-I/home/darkoverlordofdata/Documents/GitHub/v/thirdparty/glad",
                "-O3",
                "-s", "WASM=1",
                "-s", "USE_WEBGL2=1", 
                "-s", "USE_GLFW=3", 
                "-o", "docs/index.html"
            ],
        
            "problemMatcher": {
                "owner": "emcc",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true

            },
            "dependsOn":["prebuild"]
        },
        {
            "label": "prebuild",
            "type": "shell",
            "command": "${workspaceFolder}/prebuild",
            "args": [ "${workspaceFolderBasename}" ],
            "group": "build"
        }
    ]
}
