{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "clang",
            "args": [
                "${workspaceFolder}/src/tetris.c",
                "-I${workspaceFolder}/thirdparty/glad",
                "-I${workspaceFolder}/thirdparty/stb_image",
                "-I/usr/include/freetype2",
                "-l", "m",
                "-l", "dl",
                "-l", "pthread",
                "-l", "glfw",
                "-l", "GL",
                "-l", "freetype",
                "${workspaceFolder}/thirdparty/glad/glad.o",
                "-o", "${workspaceFolder}/build/tetris"
            ],
            "group": {
                "kind": "build",
                "isDefault": true

            },
            "dependsOn":["prebuild"]
        },
        {
            "label": "prebuild",
            "command": "v",
            "args": [
                "-o", "${workspaceFolder}/src/tetris.c",
                "${workspaceFolder}/src/tetris.v"
            ],
            "group": "build",
        }
    ]
}
